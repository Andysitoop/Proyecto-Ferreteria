package com.miempresa.vistas;

import com.jfoenix.controls.JFXButton;
import com.jfoenix.controls.JFXDialog;
import com.jfoenix.controls.JFXDialogLayout;
import javafx.fxml.FXML;
import javafx.scene.control.TextField;
import javafx.scene.control.PasswordField;
import javafx.scene.control.Label;
import javafx.scene.Scene;
import javafx.scene.layout.AnchorPane;
import javafx.stage.Stage;
import javafx.scene.layout.StackPane;

public class LoginApp {

    @FXML
    private TextField emailField;
    @FXML
    private PasswordField passwordField;
    @FXML
    private Label errorLabel;

    @FXML
    private void handleLogin() {
        String email = emailField.getText();
        String password = passwordField.getText();

        // Lógica de validación (en este caso es ficticia)
        if (email.equals("admin@ferreteria.com") && password.equals("1234")) {
            // Redirigir a la siguiente ventana de la aplicación
            showSuccessDialog();
            System.out.println("Login exitoso");
            // Aquí puedes continuar con el flujo del programa o abrir una nueva ventana
        } else {
            // Mostrar mensaje de error
            errorLabel.setText("Correo o contraseña incorrectos.");
        }
    }

    private void showSuccessDialog() {
        // Crear un JFXDialog con un mensaje de éxito
        JFXDialogLayout content = new JFXDialogLayout();
        content.setHeading(new javafx.scene.control.Label("¡Login Exitoso!"));
        content.setBody(new javafx.scene.control.Label("Has ingresado correctamente."));
        
        JFXButton closeButton = new JFXButton("Cerrar");
        closeButton.setStyle("-fx-background-color: #3c8dbc; -fx-text-fill: white;");
        closeButton.setOnAction(event -> {
            // Cerrar el diálogo
            System.exit(0); // Cerrar la aplicación, o puedes redirigir a otra ventana
        });

        content.setActions(closeButton);
        
        StackPane stackPane = new StackPane();
        JFXDialog dialog = new JFXDialog(stackPane, content, JFXDialog.DialogTransition.CENTER);
        dialog.show();
    }

    public static void main(String[] args) {
        // Inicializar el inicio de la aplicación
        javafx.application.Application.launch(LoginApp.class, args);
    }

    public void start(Stage stage) {
        try {
            // Cargar la vista FXML
            AnchorPane root = javafx.fxml.FXMLLoader.load(getClass().getResource("LoginView.fxml"));
            Scene scene = new Scene(root, 600, 400);
            stage.setScene(scene);
            stage.setTitle("Login - Ferreteria");
            stage.show();
        } catch (Exception e) {
            e.printStackTrace();
        }
    }
}


